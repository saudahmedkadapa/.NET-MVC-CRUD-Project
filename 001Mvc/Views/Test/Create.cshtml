
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>

    <title>Edit</title>
</head>
<body>

    <form action="/Test/AfterCreate" method="POST" role="form">
        <legend style="margin-left:10px">
            Create a New Record
        </legend>

        <div class="form-group">
            <label for="Id" style="margin-left:10px">Id</label>
            <input type="text" style="margin-left:10px" class="form-control" id="Id" name="Id" placeholder="number">
        </div>

        <div class="form-group">
            <label for="Id" style="margin-left:10px">Name</label>
            <input type="text" style="margin-left:10px" class="form-control" id="Name" name="Name" placeholder="John, Virat">
        </div>

        <div class="form-group">
            <label for="Id" style="margin-left:10px">Address</label>
            <input type="text" style="margin-left:10px" class="form-control" id="Address" name="Address" placeholder="New York, India">
        </div>
        <br />




        <a href="/Test/Show" class="btn btn-info"> &lt-Go home Page </a>
        <button type="submit" class="btn btn-primary">Save Record</button>

    </form>


</body>
</html>
